<title>planner</title>
<p id="notice"><%= notice %></p>
<% if current_user  %>
<div
  class="fb-like"
  data-share="true"
  data-width="450"
  data-show-faces="true">
</div>

<h1>Things to do.</h1>
<div class="row">
  <div class="col-sm-4">
    <%= link_to fa_icon('plus', text: 'Add Task'), new_user_task_path, remote: true, class: 'btn btn-block btn-default', id: 'new-button' %>
    <div id="task-form"></div>
  </div>
  <div class="col-sm-8">
    <h3>All tasks</h3>
      <div id="tasks">
        <%= render @user_tasks %>
      </div>
  </div>
</div>

<% else %>
  <% redirect_to signin_url %>
<% end %>
