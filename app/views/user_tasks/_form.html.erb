<%= simple_form_for(@user_task, remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description, as: :text, placeholder: 'whats your plan?' %>
    <%= f.input :due, as: :string, placeholder: 'date' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-block btn-default' %>
  </div>
<% end %>
